{
  "name": "pricing-tool",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:api": "turbo run build --filter @pricing-tool/api",
    "build:web": "turbo run build --filter @pricing-tool/web",
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter @pricing-tool/api",
    "dev:web": "turbo run dev --filter @pricing-tool/web",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "rimraf dist node_modules pnpm-lock.yaml"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-only-warn": "^1.1.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "sass-embedded": "^1.89.1",
    "turbo": "^2.5.4",
    "typescript": "5.8.2",
    "typescript-eslint": "^8.33.0"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "lodash": "^4.17.21",
    "react-hook-form": "^7.63.0",
    "zod": "^4.1.11"
  }
}
