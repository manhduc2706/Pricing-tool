{
  "name": "@pricing-tool/api",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,json --exec tsx src/index.ts",
    "build": "rimraf dist && tsc --project tsconfig.app.json",
    "start": "node dist/index.js",
    "seed": "tsx src/seeds/seed.ts",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write 'src/**/*.{ts,js}'",
    "check-types": "tsc --noEmit",
    "docker:dev": "docker-compose up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up",
    "docker:build": "docker build -t pricing-tool-api .",
    "docker:build-dev": "docker build -f Dockerfile.dev -t pricing-tool-api:dev ."
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "lodash": "^4.17.21",
    "mongoose": "^8.16.5",
    "minio": "^8.0.6",
    "exceljs": "^4.4.0",
    "geoip-lite": "^1.4.10",
    "image-size": "^2.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.15.21",
    "eslint": "^9.28.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.2"
  }
}